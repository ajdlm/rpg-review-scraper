<div class="container-fluid px-5">
    {{#each reviews}}
    <div class="row text-center">
        <div class="col-md-3 d-flex align-items-center">
            <div class="flex-column">
                <img src="assets/images/{{reviewSource}}.png" alt="source-logo" />

                <h3 class="text-danger">{{reviewTitle}}</h3>
            </div>
        </div>

        <div class="col-md-7 d-flex align-items-center">
            <div class="flex-column">
                <p>{{reviewSummary}}</p>

                <a href={{reviewURL}}>{{reviewURL}}</a>
            </div>
        </div>

        <div class="col-md-2 d-flex align-items-center">
            <div class="flex-column ml-auto mr-4">
                <button data-id={{_id}} class="commentButton btn btn-danger mb-3">Comments</button>

                <h3
                    class="reviewScore mx-auto mb-3 bg-warning border border-danger text-center d-flex align-items-center justify-content-center">
                    <span>{{reviewScore}}</span>
                </h3>

                <button data-id={{_id}} class="deleteReviewButton btn btn-danger">Delete Review</button>
            </div>
        </div>
    </div>

    <hr class="border border-danger rounded my-3" />
    {{/each}}
    {{#ifLength reviews 0}}
    <div class="replacementDiv d-flex align-items-center justify-content-center py-4 w-100">
        <div class="flex-column text-center w-100">
            <h1 class="noReviews text-center text-danger">No saved reviews.</h1>

            <img class="mb-2" src="assets/images/sad-crono.png" alt="sad-crono" style="min-height: 128px;" />

            <div class="card w-100">
                <div class="card-header bg-danger">
                    <h4 class="noReviews card-title text-white">Would you like to view unsaved reviews?</h4>
                </div>

                <div class="card-body">
                    <h4 id="viewUnsavedLink" class="noReviews noReviewLink text-danger">View unsaved reviews.</h4>
                </div>
            </div>
        </div>
    </div>
    {{/ifLength}}
</div>

<div class="modal" id="reviewComments" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h4 id="commentsHeader" class="modal-title text-danger text-center">
                    </h2>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>

            <div class="modal-body pt-0">
                <div id="commentArea"></div>

                <div class="row">
                    <form class="form-inline mx-auto">
                        <input id="username" class="form-control mr-2" type="text" placeholder="Name" />

                        <input id="commentInput" class="form-control mr-2" type="text" placeholder="Comment" />

                        <button id="makeComment" class="btn btn-danger" type="submit">Submit</button>
                    </form>

                </div>
            </div>

            <div class="modal-footer bg-dark">
                <button type="button" id="commentsClose" class="btn btn-danger text-white"
                    data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>