<div class="container-fluid px-5">
    {{#each saved.reviews}}
    <div class="row text-center">
        <div class="col-md-3 d-flex align-items-center">
            <div class="flex-column">
                <img class="sourceImage" src="assets/images/{{reviewSource}}.png" alt="source-logo" />

                <h3 class="text-danger">{{reviewTitle}}</h3>
            </div>
        </div>

        <div class="col-md-7 d-flex align-items-center">
            <div class="flex-column">
                <p>{{reviewSummary}}</p>

                <a href={{reviewURL}}>{{reviewURL}}</a>
            </div>
        </div>

        <div class="col-md-2 d-flex align-items-center">
            <div class="scoreAndButton flex-column ml-auto mr-4">
                <h3 class="reviewScore mx-auto bg-warning border border-danger text-center d-flex align-items-center justify-content-center">
                    <span>{{reviewScore}}</span>
                </h3>

                <h5 class="scoreLabel pixelated mb-3">Score</h4>

                    <button data-id={{_id}} class="commentButton btn btn-danger mb-3">Comments</button>

                    <button data-id={{_id}} class="deleteReviewButton btn btn-danger">Delete Review</button>
            </div>
        </div>
    </div>

    <hr class="reviewHr border border-danger rounded my-3" />
    {{/each}}
    {{#ifLength saved.reviews 0}}
    <div class="replacementDiv d-flex align-items-center justify-content-center py-4 w-100">
        <div class="flex-column text-center w-100">
            <h1 class="pixelated text-center text-danger">No saved reviews.</h1>

            <img class="sadCrono mb-2" src="assets/images/sad-crono.png" alt="sad-crono" />

            <div class="card w-100">
                <div class="card-header bg-danger">
                    <h4 class="pixelated card-title text-white mb-0">Would you like to view unsaved reviews?</h4>
                </div>

                <div class="card-body pt-2 px-0">
                    <h4 id="viewUnsavedLink" class="pixelated noReviewLink text-danger py-2 mt-1 mb-0">View unsaved
                        reviews.</h4>
                </div>
            </div>
        </div>
    </div>
    {{/ifLength}}
</div>

<div class="modal" id="reviewComments" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div id="commentsHeader" class="modal-header">
                <h4 id="commentsHeaderTitle" class="modal-title text-danger text-center">
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body p-0">
                <div id="commentArea"></div>

                <form class="form-inline mx-2 d-flex">
                    <input id="username" class="form-control mr-2" type="text" placeholder="Name" />

                    <input id="commentInput" class="flex-fill form-control mr-2" type="text" placeholder="Comment" />

                    <button id="makeComment" class="btn btn-danger" type="submit">Submit</button>
                </form>

                <p id="commentPrompt" class="text-danger my-2"></p>
            </div>

            <div id="commentsFooter" class="modal-footer">
                <button type="button" id="commentsClose" class="btn btn-danger text-white mx-auto"
                    data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>